{
    "source": {
      "include": ["__tests__"],
      "includePattern": ".+\\.js(doc|x)?$"
    },
    "plugins": ["plugins/markdown"],
    "opts": {
      "recurse": true,
      "destination": "docs/",
      "template": "node_modules/docdash",
      "readme": "README.md"
    },
    "markdown": {
      "idInHeadings": true
    },
    "templates": {
      "cleverLinks": false,
      "monospaceLinks": false,
      "default": {
        "outputSourceFiles": true,
        "layoutFile": "./node_modules/docdash/layout.tmpl"
      }
    }
  }